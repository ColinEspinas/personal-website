---
import { Icon } from "astro-icon";

export interface Props {
  clickable?: boolean;
}

const { clickable = true } = Astro.props as Props;
---

{
  clickable ? (
    <article class="flex flex-col h-full p-4 border-2 border-primary-2 rounded bg-light hover:bg-primary-1 transition-colors">
      <slot />
    </article>
  ) : (
    <article class="flex flex-col h-full p-4 border-2 border-primary-2 rounded bg-light">
      <slot />
    </article>
  )
}
