---
export interface Props {
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  name: string;
  placeholder?: string;
  textArea?: boolean;
}

const {
  type = "text",
  placeholder,
  textArea = false,
  name,
} = Astro.props as Props;
---

{
  !textArea && (
    <input type={type} placeholder={placeholder} class="input" name={name} />
  )
}
{
  textArea && (
    <textarea class="input h-full" placeholder={placeholder} name={name} />
  )
}

<style>
  .input {
    @apply w-full border-primary-2 border-2 p-3 rounded text-dark placeholder:text-dark placeholder:opacity-60 font-medium outline-none focus:border-primary transition-colors resize-none;
  }
</style>
