---
import Navigation from "@components/app/Navigation.astro";
import Fonts from "@components/head/Fonts.astro";
import { Icon } from "astro-icon";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <Fonts />
  </head>
  <body class="bg-light text-dark grid grid-cols-12 gap-x-5 px-6">
    <Navigation />
    <main class="col-start-5 col-end-9 mt-[150px]">
      <slot></slot>
    </main>
  </body>
</html>
