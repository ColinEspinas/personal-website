---
import Layout from "@layouts/Default.astro";
import LinkButton from "@components/app/atoms/LinkButton.astro";
import Section from "@components/app/atoms/Section.astro";
import ProjectList from "@components/app/molecules/ProjectList.astro";
import WritingList from "@components/app/molecules/WritingList.astro";
import HomeWavyText from "@components/app/molecules/HomeWavyText.svelte";
---

<Layout title="Colin Espinas - Full Stack Web Developer">
  <header class="flex flex-col gap-5 mb-[150px]">
    <h1 class="font-display text-5xl font-bold leading-[61px]">
      <p>Hello,</p>
      <p>I'm&nbsp;<HomeWavyText client:load /></p>
    </h1>
    <p class="font-display text-2xl font-medium leading-[30px] text-dark-2">
      I love crafting <strong>tools</strong> and <strong>experiences</strong> to
      make the web more <strong>open</strong>, <strong>accessible</strong>
      and <strong>beautiful</strong>.
    </p>

    <LinkButton to="/about" icon="ph:arrow-right-bold" size="big"
      >Learn more about me
    </LinkButton>
  </header>

  <div class="flex flex-col gap-7">
    <Section title="Latest projects">
      <ProjectList />
      <LinkButton to="/work" type="secondary" icon="ph:arrow-right-bold"
        >See more
      </LinkButton>
    </Section>
    <Section title="Featured writings">
      <WritingList featured />
      <LinkButton to="/writings" type="secondary" icon="ph:arrow-right-bold"
        >Read all writings
      </LinkButton>
    </Section>
  </div>
</Layout>
